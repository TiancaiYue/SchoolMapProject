<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/sp_12"
    android:layout_marginRight="@dimen/sp_12"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/sp_12"
    android:paddingTop="@dimen/sp_12"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <org.raphets.roundimageview.RoundImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/text"
            app:leftBottom_corner_radius="8dp"
            app:leftTop_corner_radius="8dp"
            app:rightBottom_corner_radius="8dp"
            app:rightTop_corner_radius="8dp"
            app:type="round"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="围巾"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="¥500"
                android:textColor="@color/goldenYellow"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>