<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <com.keyuan.schoolmap.widget.RxTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tb_title="登录"/>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/ic_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_choose_school"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/sp_12"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_login_company"/>

            <TextView
                android:id="@+id/tv_school_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/sp_12"
                android:gravity="center_vertical"
                android:hint="请选择学校"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_14"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_down_app"/>
        </LinearLayout>

        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/sp_12"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_yhm"/>

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/sp_12"
                android:background="@null"
                android:hint="请输入用户名"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/sp_12"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_password"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/sp_12"
                android:background="@null"
                android:hint="请输入密码"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/lineColor"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_btn_base"
            android:text="登录"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <View
                android:layout_width="48dp"
                android:layout_height="1dp"
                android:background="@color/lineColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_12"
                android:layout_marginRight="@dimen/sp_12"
                android:text="第三方账号登录"
                android:textSize="@dimen/text_size_12"/>

            <View
                android:layout_width="48dp"
                android:layout_height="1dp"
                android:background="@color/lineColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="@dimen/sp_12"
                android:src="@drawable/ic_wechat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_go_to_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="快速注册"
                android:textColor="@color/goldenYellow"
                android:textSize="@dimen/text_size_13"/>

            <View
                android:layout_width="1px"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/sp_12"
                android:layout_marginRight="@dimen/sp_12"
                android:background="@color/lineColor"/>

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="忘记密码?"
                android:textColor="@color/goldenYellow"
                android:textSize="@dimen/text_size_13"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
