<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_24"
    android:layout_marginRight="@dimen/sp_12"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/view_horizontal_divider2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"/>

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定开启您的店铺吗？"
                android:textColor="@color/goldenYellow"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/ll_is_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_choose"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/drawable_radio_selected"/>

                <TextView
                    android:id="@+id/tv_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="阅读并同意开店协议"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_horizontal_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="取消"
                android:textSize="14sp"/>

            <View
                android:id="@+id/view_vertical_divider"
                android:layout_width="1px"
                android:layout_height="45dp"
                android:background="#ccc"/>

            <Button
                android:id="@+id/btn_content"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="确认"
                android:textColor="@color/goldenYellow"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>