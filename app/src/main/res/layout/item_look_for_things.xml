<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:padding="@dimen/sp_12">

        <com.keyuan.schoolmap.widget.RxSquareLayout
            android:id="@+id/rxSquareLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/sp_12">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@color/windowBackground"/>
        </com.keyuan.schoolmap.widget.RxSquareLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rxSquareLayout"
            android:layout_toEndOf="@+id/rxSquareLayout"
            android:text="手机iphoneX"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView2"
            android:text="9-11 15:00"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rxSquareLayout"
            android:layout_toEndOf="@+id/rxSquareLayout"
            android:text="K315研发室"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lineColor"/>
</LinearLayout>
