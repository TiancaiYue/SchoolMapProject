<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingTop="8dp"
              android:paddingLeft="@dimen/sp_12"
              android:paddingRight="@dimen/sp_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sp_12"
        android:paddingRight="@dimen/sp_12">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bg_but_yuan_app"/>

            <View
                android:id="@+id/view_gray"
                android:layout_width="2dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/gray"
                android:visibility="visible"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold"
                android:text="物联网与软件技术学院"/>

            <TextView
                android:id="@+id/tv_position_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tv_position"
                android:layout_alignRight="@+id/tv_position"
                android:layout_below="@+id/tv_position"
                android:layout_marginTop="11dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="K楼315室 swfit开发与设计课程"/>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_position_details"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_btn_base"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="签到"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="9:20"
                android:textStyle="bold"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor"/>
</LinearLayout>
