<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <com.keyuan.schoolmap.widget.RxTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tb_title="注册"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_login"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="校园通"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_choose_school"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/sp_12"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_login_company"/>

            <TextView
                android:id="@+id/tv_school_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/sp_12"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请选择学校"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_14"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_down_app"/>
        </LinearLayout>

        <View
            android:layout_width="240dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/sp_12"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_phone_number"/>

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_12"
                android:background="@null"
                android:hint="请输入手机号码   "
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <View
            android:layout_width="240dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/sp_12"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_verification"/>

            <EditText
                android:id="@+id/et_write_verification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_12"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/tv_get_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_base_border"
                android:paddingBottom="@dimen/space_2"
                android:paddingLeft="@dimen/space_8"
                android:paddingRight="@dimen/space_8"
                android:paddingTop="@dimen/space_2"
                android:text="获取验证码"
                android:textColor="@color/goldenYellow"/>
        </LinearLayout>

        <View
            android:layout_width="240dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@color/lineColor"/>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/sp_12"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space_2"
            android:paddingTop="@dimen/space_2">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_password"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_12"
                android:background="@null"
                android:hint="请输入密码"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <View
            android:layout_width="240dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@color/lineColor"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_btn_base"
            android:text="注册"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_go_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/sp_12"
            android:text="已有账号?"
            android:textColor="@color/goldenYellow"
            android:textSize="@dimen/text_size_13"/>
    </LinearLayout>

</LinearLayout>
